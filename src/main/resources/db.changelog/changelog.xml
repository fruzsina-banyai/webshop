<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd"
>

    <changeSet id="#8_Create_user_table" author="fruzsina-banyai">
        <createTable tableName="user">
            <column name="id" type="uuid">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="role" type="string">
                <constraints nullable="false"/>
            </column>
            <column name="first_name" type="string">
                <constraints nullable="false"/>
            </column>
            <column name="last_name" type="string">
                <constraints nullable="false"/>
            </column>
            <column name="email" type="string">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="phone_number" type="string">
                <constraints nullable="false"/>
            </column>
            <column name="password" type="string">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="#8_Add_address_table" author="fruzsina-banyai">
        <createTable tableName="address">
            <column name="id" type="uuid">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="user_id" type="uuid">
                <constraints nullable="false"/>
            </column>
            <column name="country" type="string">
                <constraints nullable="false"/>
            </column>
            <column name="state" type="string">
                <constraints nullable="false"/>
            </column>
            <column name="zip_code" type="string">
                <constraints nullable="false"/>
            </column>
            <column name="city" type="string">
                <constraints nullable="false"/>
            </column>
            <column name="street_address" type="string">
                <constraints nullable="false"/>
            </column>
        </createTable>
        
        <addForeignKeyConstraint baseTableName="address" baseColumnNames="user_id" constraintName="fk_user_on_address"
                                 referencedTableName="user"
                                 referencedColumnNames="id"/>
    </changeSet>

</databaseChangeLog>
